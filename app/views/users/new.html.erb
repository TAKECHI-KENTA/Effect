<div class="users-new-wrapper">
  <div class="title-logo">
    GAMBA! (ベータ版)
  </div>
  
  <div class="users-new-container background-white">
    <div class="row">
      <div class="col-md-8 offset-md-2 users-new-container">
        <h2 class="text-center text-gray">アカウントの新規作成</h2>
        <%= form_for @user do |f| %>
          <div class="form-position">
            <%= f.label :ニックネーム, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-position">
            <%= f.label :パスワード, class: 'form-label' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-position">
            <%= f.label :パスワード確認, class: 'form-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>  
          <%= f.submit "登録", class: 'btn btn-outline-warning btn-top' %> <%#ボタンを幅広げたい。ログインを中央ゾロえ%>
        <% end %>
        <div class="login-signup-link">
          <%= link_to 'ログインはこちら', login_path %>
        </div>
      </div>
    </div>
  </div>

</div>