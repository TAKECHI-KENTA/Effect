<div class="index-wrapper">
  <div class="contents-divider">
    <div class="row flex-nowrap">
      <%= render partial: "layouts/sidebar" %>
      <div class="contents">
        <div class="page-title">
          <span class="sub-title">頑張り時間の入力</span>
        </div> 
        <div class="page-body">
          <div class="column-name">
            <div class="row flex-nowrap">
              <div class="goal-title mini-title"><span>取り組み中の目標</span></div>
              <div class="time-title mini-title"><span>頑張り時間(分)</span></div>
              <!-- 登録ボタンにタイトルは不要-->
            </div>
          </div>
          <!--このclass=time-settingを繰り返し処理にする-->
          <% @projects.each do |project| %>
            <div class="time-setting">
              <div class="row">
                  <div class="goal-description"><%= project.title %></div>
                  <%= form_for @current_project, url:{ controller: 'projects', action: 'update', id: @projects.id} do |f| %>
                    <div class="time-input"><%= f.text_field :target_time, class: 'form-control form-target-time' %></div>
                    <div class="registration-btn"><%= f.submit '登録', class: 'btn btn-outline-warning btn-top' %></div>
                  <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
