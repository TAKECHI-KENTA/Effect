<div class="contents">
  <div class="result-title">
    <span class="sub-title">結果を入れる</span>
  </div> 
  <div class="page-body">
    <%= form_with model: selected_project, url: { controller: 'projects', action: 'update' } do |f| %>
      <div class="form-position">
        <%= f.label :'目標達成度合い (%単位で数字だけ入力)', class: 'form-label' %>
        <%= f.text_field :level_of_achievement, class: 'form-control form-target-time' %>
      </div>
      <div class="form-position">
        <%= f.label :コメント, class: 'form-label' %>
        <%= f.text_area :comment, class: 'form-control form-description' %> 
      </div>
      <%# if logged_in? %>
        <%= f.hidden_field :id, value: selected_project.id %>
        <%= f.submit '結果を登録する', class: 'btn btn-outline-warning background-white btn-top' %> 
      <%# end %>
      </div>
    <% end %>
    <%= form_with model: selected_project, url: { controller: 'projects', action: 'update' } do |f| %>
      <%= f.hidden_field :status, value: 'done' %>
      <%= f.hidden_field :id, value: selected_project.id %>
      <%= f.submit '目標を完了にする', class: 'btn btn-warning btn-top' %> 
    <% end %>
    </button>
  </div>
</div>